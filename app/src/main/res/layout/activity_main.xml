<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tablero"
        android:layout_width="409dp"
        android:layout_height="375dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow>

            <ImageView
                android:id="@+id/casilla00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />

            <ImageView
                android:id="@+id/casilla01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />

            <ImageView
                android:id="@+id/casilla02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/casilla10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />

            <ImageView
                android:id="@+id/casilla11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />

            <ImageView
                android:id="@+id/casilla12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/casilla20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />

            <ImageView
                android:id="@+id/casilla21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />

            <ImageView
                android:id="@+id/casilla22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="?android:selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/punto" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/txtSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.788" />

</androidx.constraintlayout.widget.ConstraintLayout>